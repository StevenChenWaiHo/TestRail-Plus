{
    "manifest_version": 3,
    "name": "TestRail+",
    "version": "1.0.0",
    "icons": {
        "32": "./icons/icon.png"
    },
    "background": {
        "scripts": ["./app/background.js"]
    },
    "action": {
        "default_popup": "index.html"
    },
    "permissions": [
        "scripting",
        "storage"
    ],
    "host_permissions": [
        "http://*/*",
        "https://*/*"
    ],
    "browser_specific_settings": {
        "gecko": {
          "id": "TestRail.Plus@hoho.comsci",
          "strict_min_version": "42.0"
        }
      }
}